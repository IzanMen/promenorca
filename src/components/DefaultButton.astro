---
interface Props {
    link: string;
    text: string;
    color: string;
}

const { link, text, color } = Astro.props;
---

<a href={link} class="default-button" style={{ backgroundColor: `var(--color-${color})` }}>{text}</a>

<style>
    .default-button {
        text-decoration: none;
        color: var(--color-white);
        font-size: 1.2rem;
        padding: 10px;

        transition: all .2s;
    }

    .default-button:hover {
        padding: 10px 13px;
    }
</style>