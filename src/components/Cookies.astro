<div class="container" id="cookie-popup">
    <span>    
        <h6>Cookies</h6>
        <p>Este sitio web utiliza cookies para mejorar tu experiencia de navegación. Si deseas más información, consulta nuestra <a href="/cookies">Política de Cookies</a>.</p>
        <div>
            <button id="accept-cookies" class="cookie-button">Aceptar</button>
            <button id="reject-cookies" class="cookie-button reject">Rechazar</button>    
        </div>
    </span>
</div>

<style>
    .container {
        width: 100%;
        height: 100vh;
        background-color: #000a;
        position: fixed;
        top: 0;
        z-index: 100000;
        display: flex;
        align-items: center;
        justify-content: center;
        display: none; /* Inicialmente oculto */
    }

    span {
        background-color: var(--color-white);
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 800px;
        height: 300px;
        max-width: 95%;
    }

    p {
        width: 600px;
        text-align: center;
        max-width: 95%;
    }

    h6 {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 20px;
    }

    button {
        width: 200px;
        height: 50px;
        border: none;
        border-radius: 10px;
        background-color: var(--color-green);
        color: var(--color-white);
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        margin-top: 20px;
    }

    #reject-cookies {
        background-color: var(--color-white);
        color: #000;
    }

    @media screen and (max-width: 600px) {
        .container div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 0;
        }

        #reject-cookies {
            margin-top: 0px;
            background-color: #0000;
        }

        span {
            height: 400px;
        }
    }
</style>

<script type="module">
    // Verificar si ya se aceptaron o rechazaron las cookies
    const cookiesStatus = localStorage.getItem("cookiesAccepted");

    // Si no se ha almacenado ninguna preferencia o se rechazaron, mostrar el pop-up
    if (cookiesStatus === null || cookiesStatus === "false") {
        const cookiePopup = document.getElementById("cookie-popup");
        if (cookiePopup) {
            cookiePopup.style.display = "flex";  // Mostrar el pop-up
        }
    }

    // Función para aceptar cookies
    const acceptCookiesButton = document.getElementById("accept-cookies");
    if (acceptCookiesButton) {
        acceptCookiesButton.addEventListener("click", function() {
            localStorage.setItem("cookiesAccepted", "true");  // Guardar el consentimiento
            const cookiePopup = document.getElementById("cookie-popup");
            if (cookiePopup) {
                cookiePopup.style.display = "none";  // Ocultar el pop-up
            }
        });
    }

    // Función para rechazar cookies
    const rejectCookiesButton = document.getElementById("reject-cookies");
    if (rejectCookiesButton) {
        rejectCookiesButton.addEventListener("click", function() {
            localStorage.removeItem("cookiesAccepted");  // Eliminar la preferencia de cookies
            const cookiePopup = document.getElementById("cookie-popup");
            if (cookiePopup) {
                cookiePopup.style.display = "none";  // Ocultar el pop-up
            }
        });
    }
</script>
