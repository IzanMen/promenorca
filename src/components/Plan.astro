<style>
    h3 a {
        text-decoration: none;
        color: var(--color-black);
    }

    .plan {
        display: flex;
        flex-direction: column;
        background-color: var(--color-red);
        height: 1000px;
        padding-top: 70px;
        position: relative;
        width: 100%;
        min-width: 400px;
    }

    @media screen and (max-width: 550px) {
        .plan {
            min-width: 100%;
        }
    }

    .plan-basic {
        background-color: var(--color-green);
    }

    .plan-intermediate {
        background-color: var(--color-yellow);
    }

    .plan-advanced {
        background-color: var(--color-red);
    }

    .triangle {
        display: block;
        width: 0;
        height: 0;
        border-left: 30px solid transparent;
        border-right: 30px solid transparent;
        border-bottom: 50px solid var(--color-white);
        position: absolute;
        top: 45px;
        left: 0;
        right: 0;
        margin: auto;
    }

    .plan div {
        height: 930px;
        background-color: var(--color-white);
        z-index: 100;
        padding: 0 20px;
        position: relative;
        padding-top: 50px;
        padding-bottom: 50px;
    }

    .plan-title {
        font-size: 2rem;
    }

    .plan-price {
        font-size: 3.5rem;
        margin-top: 60px;
        display: inline-block;
        width: 100%;
        line-height: 2.5rem;
        border-bottom: 1px solid var(--color-green);
        margin-bottom: 50px;
    }
    
    .plan-price p {
        font-size: 1rem;
        display: inline-block;
    }

    .plan-first-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 20px;
        border-bottom: 1px solid var(--color-green);
        padding-bottom: 20px;
    }

    .plan-first-list li {
        display: flex;
        gap: 7px;
    }

    .plan-first-list li p {
        line-height: 1rem;
    }

    .plan-second-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding-top: 20px;
    }

    .plan-second-list p {
        line-height: 1rem;
    }

    .plan-second-list li {
        display: flex;
        gap: 7px;
    }

    .plan-question {
        position: absolute;
        bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    @media screen and (max-width: 1020px) {
        .plan {
            display: none;
        }

        .plan-basic {
            display: block;
        }
    }

</style>