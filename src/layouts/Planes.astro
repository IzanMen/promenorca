---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Catalogo from "../components/Catalogo.astro";
import Newsletter from "../components/Newsletter.astro";
import ContactForm from "../components/ContactForm.astro";

const { title, description, headerSubtitle, headerTitle, color, text1, text2 } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		<Header />
		<header style={`background-color: ${color};`}>
            <div>
                <p>{headerSubtitle}</p>
                <h1>{headerTitle}</h1>    
            </div>
        </header>
        <main>
            <div class="main-text">
                <p>{text1}</p>
                <span>Â¿Lo mejor?</span>
                <p>{text2}</p>    
            </div>
        </main>
        <Catalogo />
		<Newsletter />
		<Footer />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
		font-family: 'Koulen', sans-serif;
		font-weight: 400;
		margin: 0;
		padding: 0;
	}

	h1, h2, h3, h4, h5, h6 {
		line-height: 2.2rem;
	}
</style>

<style>
@import url('https://fonts.googleapis.com/css2?family=Koulen&display=swap');

html,
body {
	margin: 0;
	width: 100%;
	height: 100%;

	scroll-behavior: smooth;
}

:root {
	--color-green: #74B27B;
	--color-yellow: #FACF55;
	--color-red: #E96950;
	--color-white: #FDF6EF;
	--color-grey: #4A4A48;

	--color-green-hover: #5E9B5A;
	--color-red-hover: #D14E36;
}

header {
    margin-top: 150px;
    color: var(--color-white);
}

header div {
    max-width: 1500px;
    width: 90%;
    margin: auto;
    padding: 20px 0;
}

header div p {
    font-size: 1.5rem;
}

header div h1 {
    font-size: 2.5rem;
}

main {
    width: 90%;
    max-width: 1500px;
    margin: auto;
    margin-top: 50px;
    color: var(--color-grey);
}

.main-text span {
    color: var(--color-yellow);
    display: inline-block;
    margin-top: 30px;
}

.main-form {
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

</style>
